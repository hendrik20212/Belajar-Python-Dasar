# Deklarasi variabel
nama = "John"
umur = 25
tinggi = 175.5  # dalam cm

# Operasi aritmatika sederhana
tahun_lahir = 2024 - umur
tinggi_m = tinggi / 100  # konversi tinggi dari cm ke meter

# Menampilkan informasi ke layar
print("Nama:", nama)
print("Umur:", umur, "tahun")
print("Tinggi:", tinggi, "cm")
print("Tahun Lahir:", tahun_lahir)
print("Tinggi dalam meter:", tinggi_m)

# Mengubah nilai variabel
nama = "Alice"
umur = 30
tinggi = 160.2

# Operasi aritmatika sederhana
tahun_lahir = 2024 - umur
tinggi_m = tinggi / 100  # konversi tinggi dari cm ke meter

# Menampilkan informasi yang diperbarui ke layar
print("\nInformasi yang diperbarui:")
print("Nama:", nama)
print("Umur:", umur, "tahun")
print("Tinggi:", tinggi, "cm")
print("Tahun Lahir:", tahun_lahir)
print("Tinggi dalam meter:", tinggi_m)
